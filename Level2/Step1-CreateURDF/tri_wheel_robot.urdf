<?xml version="1.0"?>

<robot name="test">

    <material name='green'>
        <color rgba="0.0 0.5 0.0 1.0"/>
    </material>

    <link name="foot">
        
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.1"/>
            </geometry>
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.025"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
    </link>

    <link name="front_sphere">
        <visual>
            <geometry>  
                <sphere radius="0.025"/> 
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
    </link>


    <joint name="base_foot" type="fixed">
        <parent link="foot"/>
        <child link="base_link"/>
        <origin xyz="0.0 0 0.05" rpy="0 0.0 0.0"/>
    </joint>

    <joint name="base_sphere_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_sphere"/>
        <origin xyz="0.125 0 -0.025" rpy="0 0.0 0.0"/>
    </joint>
    

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.1 -0.1125 0.0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 0 1"/>
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.1 0.1125 0.0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 0 1"/>
    </joint>

</robot>
